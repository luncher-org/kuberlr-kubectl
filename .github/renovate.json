{
  "extends": [
    "github>rancher/renovate-config#release"
  ],
  "baseBranches": [
    "main",
    "/^release\\/v[0-9]+.x/"
  ],
  "prHourlyLimit": 12,
  "packageRules": [
    {
      "matchDepNames": ["kubernetes/kubernetes"],
      "separateMinorPatch": true,
      "allowedVersions": ">=1.28.0"
    },
    {
      "description": "Disable major and minor updates",
      "matchDepNames": ["kubernetes/kubernetes"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "groupName": "GitHub Workflow Actions",
      "groupSlug": "gha-deps",
      "matchManagers": [
        "github-actions"
      ]
    },
    {
      "groupName": "Docker File Deps",
      "groupSlug": "docker-bumps",
      "matchManagers": [
        "dockerfile"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "deps.mk$"
      ],
      "matchStrings": [
        "KUBECTL\\d_VERSION :=\\s(?<currentValue>.*?)\\n"
      ],
      "depNameTemplate": "kubernetes/kubernetes",
      "datasourceTemplate": "github-releases"
    }
  ]
}
